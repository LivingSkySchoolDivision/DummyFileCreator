<Window x:Class="CreateDummyFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreateDummyFile"
        mc:Ignorable="d"
        Title="Dummy file creator" Height="135.227" Width="525" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <Slider x:Name="slider" Margin="10,41,10,0" ValueChanged="slider_ValueChanged" Minimum="0" Maximum="5000000" SmallChange="1" Height="18" VerticalAlignment="Top"/>
        <Label x:Name="lblSize" Content="" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSave" Content="Create file" HorizontalAlignment="Right" Margin="0,67,10,0" VerticalAlignment="Top" Width="75" Click="btnSave_Click"/>

    </Grid>
</Window>
